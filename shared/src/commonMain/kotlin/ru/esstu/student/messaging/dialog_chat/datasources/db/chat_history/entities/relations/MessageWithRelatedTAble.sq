
import ru.esstu.student.messaging.dialog_chat.datasources.db.chat_history.entities.DialogChatAuthorEntity;



CREATE TABLE DialogChatMessageEntity(
    id INTEGER PRIMARY KEY,
    opponentId TEXT,
    fromSend TEXT AS DialogChatAuthorEntity,
    replyMessageId INTEGER,
    date INTEGER,
    message TEXT,
    status TEXT
);


CREATE TABLE DialogChatAttachmentEntity(
    id INTEGER PRIMARY KEY,
    messageId INTEGER,
    fileUri TEXT,
    LocalFileUri TEXT,
    loadProgress REAL,
    name TEXT,
    ext TEXT,
    size INTEGER,
    type TEXT
);

CREATE TABLE DialogChatReplyMessageEntity(
    id INTEGER PRIMARY KEY,
    fromSend TEXT AS DialogChatAuthorEntity,
    date INTEGER,
    message TEXT,
    attachmentsCount INTEGER
);




